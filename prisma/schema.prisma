generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Room {
  id          String  @id @default(uuid())
  number      Int     @unique
  type        String
  price       Float
  availability Boolean @default(true)
  reservations Reservation[]
}

model Customer {
  id        String  @id @default(uuid())
  name      String
  email     String  @unique
  phone     String?
  reservations Reservation[]
}

model Reservation {
  id          String   @id @default(uuid())
  checkIn     DateTime
  checkOut    DateTime
  room        Room     @relation(fields: [roomId], references: [id])
  roomId      String
  customer    Customer @relation(fields: [customerId], references: [id]) // Cliente que paga
  customerId  String
  guests      String[] @default([]) 
}
